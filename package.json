{
  "name": "wc-now",
  "version": "0.2.0",
  "description": "A playground for WordPress and WooCommerce - extends wp-now with WooCommerce defaults and product cloning",
  "type": "module",
  "bin": {
    "wc-now": "./dist/cli/index.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./wc-public-api": {
      "types": "./dist/wc-public-api/index.d.ts",
      "import": "./dist/wc-public-api/index.js"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "blueprint.json",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "test:integration": "vitest run --config vitest.config.integration.ts",
    "test:integration:watch": "vitest --config vitest.config.integration.ts",
    "test:all": "pnpm run test && pnpm run build && pnpm run test:integration",
    "build": "vite build && pnpm run build:blueprint",
    "build:blueprint": "tsx src/blueprint/build-blueprint.ts",
    "prepublishOnly": "pnpm run build",
    "deploy": "pnpm publish",
    "typecheck": "tsc --noEmit",
    "ci:publish": "pnpm build && changeset publish",
    "lint": "biome lint .",
    "format": "biome format --write .",
    "biome": "biome"
  },
  "keywords": [
    "wordpress",
    "woocommerce",
    "playground",
    "development",
    "testing",
    "wp-now",
    "ecommerce",
    "local-development"
  ],
  "author": "Chris Jayden <https://github.com/multiplehats>",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/multiplehats/wc-now.git"
  },
  "bugs": {
    "url": "https://github.com/multiplehats/wc-now/issues"
  },
  "homepage": "https://github.com/multiplehats/wc-now#readme",
  "dependencies": {
    "@wp-playground/cli": "^1.1.1"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@changesets/cli": "^2.29.4",
    "@svitejs/changesets-changelog-github-compact": "^1.2.0",
    "@types/node": "^20.14.11",
    "@vitest/coverage-v8": "3.1.4",
    "globals": "^15.8.0",
    "jsdom": "^26.1.0",
    "prettier": "^3.3.3",
    "tsx": "^4.7.0",
    "typescript": "~5.5.3",
    "vite": "^6.3.5",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^2.0.3"
  },
  "engines": {
    "pnpm": ">=9.0.0",
    "node": ">=20"
  },
  "packageManager": "pnpm@9.14.4"
}